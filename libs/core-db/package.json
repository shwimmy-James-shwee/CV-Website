{
  "name": "@core/db",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.js"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e ../../apps/backend/.env -- prisma db push --skip-generate",
    "db:makemigrate": "dotenv -e ../../apps/backend/.env -- prisma migrate dev --create-only && prisma generate",
    "db:studio": "dotenv -e ../../apps/backend/.env -- prisma studio",
    "build": "prisma generate && tsup src/*.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "make:types": "pal schema typescript -o ./src",
    "docker:db:create": "docker-compose -f docker-compose-db.yml up -d"
  },
  "dependencies": {
    "@prisma/client": "5.19.0"
  },
  "devDependencies": {
    "dotenv": "16.4.5",
    "@paljs/cli": "5.3.3",
    "prisma": "5.19.0",
    "dotenv-cli": "7.4.2",
    "@repo/eslint-config": "workspace:*",
    "tsup": "8.2.4",
    "typescript": "5.5.4",
    "prisma-dbml-generator": "^0.12.0",
    "prisma-erd-generator": "^1.11.2",
    "@mermaid-js/mermaid-cli": "^10.9.0",
    "uuid": "^9.0.1"
  }
}
