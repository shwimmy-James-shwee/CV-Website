{
  "name": "backend",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "dotenv -e ../../.env -- nest start",
    "dev": "dotenv -e ../../.env -- nest start --watch",
    "start:debug": "dotenv -e ../../.env -- nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "concurrently -k -s first -n 'Unit,Inte' -c 'magenta,blue' 'pnpm test:unit:watch' 'pnpm test:e2e:watch'",
    "test:action": "pnpm test:unit:cov",
    "test:unit": "dotenv -e .env.test --override -- jest --config ./jest.config.js",
    "test:unit:watch": "dotenv -e .env.test --override -- jest --watch --coverage --config ./jest.config.js",
    "test:unit:cov": "dotenv -e .env.test --override -- jest --coverage --config ./jest.config.js",
    "test:debug": "dotenv -e .env.test --override -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm db:deploy:test && dotenv -e .env.test -- jest --config ./test-e2e/jest-e2e.config.js --runInBand",
    "test:e2e:watch": "pnpm db:deploy:test && dotenv -e .env.test -- jest --watch --config ./test-e2e/jest-e2e.config.js --coverage --runInBand",
    "test:e2e:cov": "pnpm db:deploy:test && dotenv -e .env.test -- jest --config ./test-e2e/jest-e2e.config.js --coverage --runInBand",
    "db:deploy:test": "dotenv -e .env.test -- prisma migrate reset --force --skip-generate  --schema node_modules/@core/db/prisma/schema.prisma && dotenv -e .env.test -- prisma migrate deploy  --schema node_modules/@core/db/prisma/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema node_modules/@core/db/prisma/schema.prisma",
    "db:generate": "prisma generate --schema node_modules/@core/db/prisma/schema.prisma",
    "dev:db:reset": "dotenv -e ../../.env -- prisma migrate reset --force --skip-generate  --schema node_modules/@core/db/prisma/schema.prisma && dotenv -e ../../.env -- prisma migrate deploy  --schema node_modules/@core/db/prisma/schema.prisma"
  },
  "prisma": {
    "seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "@core/db": "workspace:*",
    "@core/routes": "workspace:*",
    "@core/utils": "workspace:*",
    "@apollo/server": "4.11.0",
    "@azure/identity": "4.4.1",
    "@azure/keyvault-secrets": "4.8.0",
    "@azure/storage-blob": "12.24.0",
    "@azure/storage-queue": "12.22.0",
    "@nestjs/apollo": "12.2.0",
    "@nestjs/cache-manager": "2.2.1",
    "@nestjs/common": "10.4.1",
    "@nestjs/core": "10.4.1",
    "@nestjs/graphql": "12.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.1",
    "@nestjs/swagger": "7.3.0",
    "@nestjs/throttler": "5.1.2",
    "@prisma/client": "5.19.0",
    "applicationinsights": "2.9.5",
    "body-parser": "1.20.2",
    "cache-manager": "5.4.0",
    "clamscan": "2.2.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "crypto-js": "4.2.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "file-type": "19.0.0",
    "graphql": "16.9.0",
    "graphql-parse-resolve-info": "4.13.0",
    "neverthrow": "7.1.0",
    "passport": "0.7.0",
    "passport-azure-ad": "4.3.5",
    "prisma": "5.19.0",
    "prisma-dbml-generator": "0.12.0",
    "prisma-erd-generator": "1.11.2",
    "reflect-metadata": "0.2.0",
    "rxjs": "7.8.1",
    "swagger-ui-express": "5.0.0",
    "ts-md5": "1.3.1",
    "ts-node": "10.9.1",
    "uuid": "9.0.1",
    "zod": "3.22.4",
    "zod-validation-error": "3.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.1",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/schematics": "10.1.4",
    "@nestjs/testing": "10.4.1",
    "@repo/eslint-config": "workspace:*",
    "@types/body-parser": "1.19.2",
    "@types/clamscan": "2.0.8",
    "@types/crypto-js": "4.2.2",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/multer": "1.4.11",
    "@types/node": "20.3.1",
    "@types/passport": "1.0.16",
    "@types/passport-azure-ad": "4.3.6",
    "@types/supertest": "6.0.0",
    "@types/uuid": "10.0.0",
    "dotenv-cli": "7.4.1",
    "jest": "29.5.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.4",
    "concurrently": "^8.2.2",
    "webpack": "5.94.0"
  },
  "packageManager": "pnpm@9.7.1",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "files": [
    "dist",
    ".env*",
    "src",
    "*.txt"
  ]
}
